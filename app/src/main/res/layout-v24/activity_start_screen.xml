<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.om.cleanitup.StartScreenActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean It Up"
        android:id="@+id/start_button"
        android:layout_gravity="left|bottom"
        android:onClick="startGame"
        android:background="#0fffffff"
        android:textColor="#f74646"
        android:textSize="30dp"
        android:textStyle="bold" />
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButton"
        android:src="@drawable/sponge"
        android:background="#00ffffff"
        android:onClick="showInfo"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:id="@+id/info_button"
        android:layout_marginBottom="62dp"
        android:src="@drawable/info_button"
        android:background="#00ba6e6e"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:id="@+id/highscore_button"
        android:src="@drawable/star_button"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/info_button"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

</FrameLayout>


